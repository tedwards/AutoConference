<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
android:id="@+id/widget28"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res/org.pythonistas.AutoConference"
>
<com.admob.android.ads.AdView  
    android:id="@+id/ad" 
    android:visibility="visible"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    app:backgroundColor="#000000"
    app:textColor="#FFFFFF"
    app:keywords="Android Conference Phone Bluetooth"
    />

<ImageButton
android:id="@+id/notifyButton"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
>
</ImageButton>

<TextView
android:id="@+id/svcStatusTextView"
android:layout_width="318px"
android:layout_height="72px"
android:text=""
android:textSize="16sp"
android:gravity="center"
android:editable="false"
>
</TextView>

<TextView
android:id="@+id/paidPitchTextView"
android:layout_width="319px"
android:layout_height="41px"
android:layout_marginTop="5px"
android:layout_marginBottom="5px"
android:layout_marginLeft="5px"
android:layout_marginRight="5px"
android:text="If you like this application, please consider buying the paid version by clicking the link below."
android:gravity="left"
>
</TextView>

<Button
android:id="@+id/buyButton"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="Buy AutoConference"
>
</Button>

</LinearLayout>